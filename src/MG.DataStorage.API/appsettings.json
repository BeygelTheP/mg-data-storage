{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CacheSettings": {
    "Strategy": "Hybrid",
    "InMemoryMaxSizeMB": 50,
    "CacheDurationMinutes": 10,
    "RedisConnectionString": "${REDIS_HOST:-localhost}:${REDIS_PORT:-6379}"
  },
  "FileStorage": {
    "BasePath": "./data",
    "FileCacheDurationMinutes": 30
  },
  "PostgreSqlSettings": {
    "ConnectionString": "Host=${POSTGRES_HOST:-localhost};Port=${POSTGRES_PORT:-5432};Database=${POSTGRES_DB:-mg_data_storage};Username=${POSTGRES_USER:-postgres};Password=${POSTGRES_PASSWORD:-password}",
    "TableName": "data_storage",
    "CommandTimeoutSeconds": 30
  },
  "Security": {
    "ApiKey": "${API_KEY:-dev-api-key-change-in-production}",
    "RateLimit": {
      "Enabled": true,
      "PermitLimit": 100,
      "WindowMinutes": 1
    }
  }
}