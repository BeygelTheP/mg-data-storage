{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CacheSettings": {
    "Strategy": "Hybrid",
    "InMemoryMaxSizeMB": 50,
    "CacheDurationMinutes": 10,
    "RedisConnectionString": "${REDIS_HOST:-localhost}:${REDIS_PORT:-6379}"
  },
  "FileStorage": {
    "BasePath": "./data",
    "FileCacheDurationMinutes": 30
  },
  "Security": {
    "ApiKey": "${API_KEY:-dev-api-key-change-in-production}",
    "RateLimit": {
      "Enabled": true,
      "PermitLimit": 100,
      "WindowMinutes": 1
    }
  }
}